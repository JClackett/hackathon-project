<p id="notice"><%= notice %></p>

<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <th>Patient</th>
      <th>Location</th>
      <th>Discomfort</th>
      <th>Frequency</th>
      <th>Initial occurence</th>
      <th>Notes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.patient_id %></td>
        <td><%= post.location %></td>
        <td><%= post.discomfort %></td>
        <td><%= post.frequency %></td>
        <td><%= post.initial_occurence %></td>
        <td><%= post.notes %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path %>


  <% @messages.each do |message| %>
    <div class="timestamp">
      <%= message.created_at.to_formatted_s %>
    </div>
    <div class="created_by">
      <%= message.created_by %>
    </div>
    <div class="content">
      <%= message.content %>
    </div>
  <%end%>
  