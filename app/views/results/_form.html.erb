<h1 class="results-form-title">New Result</h1>

<div class="form">

<%= form_for(@result) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>
      <ul>
      <% @result.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :status, placeholder: 'Status', class: 'input' %>
  </div>
  <div class="field">
    <%= f.text_field :raw_data, placeholder: 'Upload document here', class: 'input' %>
  </div>
  <div class="field">
    <%= f.text_area :notes, placeholder: 'Additional notes', class: 'input text-input' %>
  </div>
  <div class="submit-button">
    <%= f.submit "Submit", class: 'submit'%>
  </div>
<% end %>

</div>