<p>
  <strong>Patient:</strong>
  <%= @patient.id %>
</p>

<p>
  <strong>Doctor:</strong>
  <%= @patient.doctors_id %>
</p>
<div class="symptoms">
<p>
  <strong>Symptoms:</strong>
</p>
<%= link_to 'New Sypmtom', new_post_path(@post) %>
	<% @posts.each do |post| %>
		<div class="timestamp">
			<%= post.created_at %>
		</div>
		<div class="location">
			<%= post.location %>
		</div>
		<div class="discomfort">
			<%= post.discomfort %>
		</div>
		<div class="frequency">
			<%= post.frequency %>
		</div>
		<div class="initial_occurence">
			<%= post.initial_occurence %>
		</div>
		<div class="notes">
			<%= post.notes %>
		</div>
	<%end%>	
</div>

<div class="messages">
<p>
  <strong>Messages:</strong>
</p>
<%= link_to 'New Message', new_post_path(@post) %>
	<% @messages.each do |message| %>
		<div class="timestamp">
			<%= message.created_at %>
		</div>
		<div class="content">
			<%= message.content %>
		</div>
	<%end%>	
</div>

<div class="results">
<p>
  <strong>Results:</strong>
</p>
	<% @results.each do |result| %>
		<div class="timestamp">
			<%= result.created_at %>
		</div>
		<div class="status">
			<%= result.status %>
		</div>
		<div class="raw_data">
			<%= result.raw_data %>
		</div>
		<div class="notes">
			<%= result.notes %>
		</div>
	<%end%>	
</div>
<%= link_to 'Edit', edit_patient_path(@patient) %> |
<%= link_to 'Back', patients_path %>
